{
  "name": "focus_challenge",
  "duration": "60min",
  "nbSituations": 2,
  "nbTrials": [5, 5],
  "nbRuns": 6,
  "break": {
    "start": {
      "type": "after_previous"
    },
    "stop": {
      "type": "duration",
      "value": 30000
    }
  },
  "calibration": [
    {
      "name": "walk",
      "start": {
        "type": "marker",
        "value": "start_walk"
      },
      "stop": {
        "type": "duration",
        "value": 30
      },
      "data": {
        "start_audio": "walk",
        "icon": "walk"
      }
    },
    {
      "name": "stand_still",
      "start": {
        "type": "marker",
        "value": "stop_walk"
      },
      "stop": {
        "type": "duration",
        "value": 30
      },
      "data": {
        "start_audio": "stand_still",
        "icon": "man"
      }
    },
    {
      "name": "rest",
      "start": {
        "type": "marker",
        "value": "start_closed_eyes"
      },
      "stop": {
        "type": "duration",
        "value": 30
      },
      "data": {
        "start_audio": "close_eyes",
        "icon": "eye-off"
      }
    }
  ],
  "trials": [
    {
      "name": "quiet_shot",
      "sequence": [
        {
          "name": "noise",
          "start": {
            "type": "after_previous"
          },
          "stop": {
            "type": "duration",
            "value": 15
          },
          "data": {
            "start_audio": "trial_start",
            "audio_file": "street",
            "loop": true,
            "icon": "ios-volume-high"
          }
        },
        {
          "name": "quiet_shot",
          "start": {
            "type": "after_previous"
          },
          "stop": {
            "type": "multiple_or",
            "value": [
              {
                "type": "duration",
                "value": 45
              },
              {
                "type": "marker",
                "value": "shot"
              }
            ]
          },
          "data": {
            "start_audio": "quiet_shot",
            "icon": "md-golf-sharp"
          }
        },
        {
          "name": "quiet",
          "start": {
            "type": "after_previous"
          },
          "stop": {
            "type": "duration",
            "value": 15
          },
          "data": {
            "start_audio": "trial_over",
            "icon": "volume-mute-sharp"
          }
        }
      ]
    },
    {
      "name": "noisy_shot",
      "sequence": [
        {
          "name": "noise",
          "start": {
            "type": "after_previous"
          },
          "stop": {
            "type": "duration",
            "value": 15
          },
          "data": {
            "start_audio": "trial_start",
            "audio_file": "street",
            "loop": true,
            "icon": "ios-volume-high"
          }
        },
        {
          "name": "noise_shot",
          "start": {
            "type": "after_previous"
          },
          "stop": {
            "type": "multiple_or",
            "value": [
              {
                "type": "duration",
                "value": 45
              },
              {
                "type": "marker",
                "value": "shot"
              }
            ]
          },
          "data": {
            "start_audio": "noisy_shot",
            "audio_file": "street",
            "loop": true,
            "icon": "md-golf-sharp"
          }
        },
        {
          "name": "quiet",
          "start": {
            "type": "after_previous"
          },
          "stop": {
            "type": "duration",
            "value": 15
          },
          "data": {
